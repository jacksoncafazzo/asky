<div class="top-content">
{{#if session.isAuthenticated}}
  <p>Logged in: {{session.currentUser.email}}        {{#md-btn action="signOut"}}
  Sign Out
  {{/md-btn}}</p>

{{else}}
<div class="sign-up-buttons">
  {{sign-up signUp="signUp" user=user}}
  {{sign-in signIn="signIn" user=user password=password}}
</div>
{{/if}}
  <h5>{{new-question save2="saveQuestion" session=session}}</h5>
</div>
<h3 class="center">The Questions</h3>
<hr>
<div class="questions">
  {{#each model.questions as |question|}}
  {{question-tile question=question update="update" destroyQuestion="destroyQuestion"}}
  {{/each}}
</div>
