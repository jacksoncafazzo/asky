{{#if updateQuestionForm}}
  <h4>Update {{question.question}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="new-question">Question</label>
          {{input value=question id="new-question" placeholder=question.question}}
        </div>

        <div class="form-group">
          <label for="q-author">Author</label>
          {{input value=author id="q-author" placeholder=question.author}}
        </div>

        <div class="form-group">
          <label for="q-posted">Posted</label>
          {{input value=posted id="q-posted" placeholder=question.posted}}
        </div>

        <div class="form-group">
          <label for="q-notes">Notes</label>
          {{input value=notes id="q-notes" placeholder=question.notes}}
        </div>

        <a class="btn" {{action 'update' question}}>Update it!</a>
      </form>
    </div>
{{else}}
    <a class="btn" {{action 'updateQuestionForm'}}>Update Question Form</a>
{{/if}}
